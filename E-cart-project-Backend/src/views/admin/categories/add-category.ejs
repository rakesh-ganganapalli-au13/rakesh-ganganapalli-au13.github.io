<%- include('../../layouts/adminHeader.ejs') %>



<div>
    <h1 class="text-center">Add a category</h1>
</div>

<a href="/api/admin/categories" class="btn btn-primary">Back to all category</a>

<form method="POST" action="/api/admin/categories/add-category/">

   
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name = "title" value="<% title %>" placeholder="Enter title" class="form-control">
    </div>

    <div class="form-group">
        <label for="slug">Slug</label>
        <input type="text" name = "slug" value="<% slug%>" placeholder="Enter slug" class="form-control">
    </div>

    
    <button class="btn btn-primary">Submit</button> 
   

</form>

<%- include('../../layouts/adminFooter.ejs') %>
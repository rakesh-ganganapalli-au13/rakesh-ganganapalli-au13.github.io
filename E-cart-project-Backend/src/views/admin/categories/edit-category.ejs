<%- include('../../layouts/adminHeader.ejs') %>



<div>
    <h1 class="text-center">Edit a category</h1>
</div>

<a href="/api/admin/categories" class="btn btn-primary">Back to all category</a>

<form method="POST" action="/api/admin/categories/edit-category/<%= slug %>">

   
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name = "title" value="<%= title %>" placeholder="Enter title" class="form-control">
    </div>

    <div class="form-group">
        <label for="slug">Slug</label>
        <input type="text" name = "slug" value="<%= slug %>" placeholder="Enter slug" class="form-control">
    </div>

    <input type="hidden" name = 'id' value="<%= id %>">

    
    <button class="btn btn-primary">Submit</button> 
   

</form>

<%- include('../../layouts/adminFooter.ejs') %>